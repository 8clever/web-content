<!DOCTYPE html>
	<html>
		<head>
			<meta charset="utf-8">
			<meta http-equiv="X-UA-Compatible" content="IE=edge">
			<meta name="viewport" content="width=device-width, initial-scale=1">
			<title>{title}</title>
			<script src="/js/pace.js"></script>
			<link rel='stylesheet' href='/stylesheets/style.css' />
			<link rel=icon href="/favicon.png" sizes="32x32" type="image/png">
		</head>
	<body>
		{> "header" /}
		<div id="maincontent" class="container">
			{+ "body" /}
		</div>
		<div id="messages" class="col-sm-4">
			{#message}
				<div class="alert alert-info">
					<button type="button" class="close" style="font-size: 15px" data-dismiss="alert">
						<span class="fa fa-close"></span>
					</button>
					{message}
				</div>
			{/message}
			{#errMessage}
				<div class="alert alert-danger">
					<button type="button" class="close" style="font-size: 15px" data-dismiss="alert">
						<span class="fa fa-close"></span>
					</button>
					{errMessage}
					<p>
						{error.stack}
					</p>
				</div>
			{/errMessage}
		</div>
		{> "footer" /}

		<script src="/js/jquery.js"></script>
		<script src="/js/bootstrap.js" ></script>
		<script src="/js/bootstrap-dialog.js" ></script>
		<script>
			var $body = $("body");

			$body.find("form[data-message]").submit(popupConfirm);
			$body.find("a[data-message]").click(popupConfirm);

			function popupConfirm (e) {
				var $form = $(this);
				var isConfirmed = $form.data("confirmed");
				var message = $form.data("message");
				if (!isConfirmed) {
					BootstrapDialog.show({
						title: "Warning!",
						message: message,
						type: BootstrapDialog.TYPE_WARNING,
						buttons: [
							getCancelButton(),
							getOkButton()
						]
					});
					return false;
				}

				function getOkButton () {
					return {
						label: "Ok",
						cssClass: "btn-warning",
						action: function(m) {
							if ($form.is("form")) {
								$form.data("confirmed", 1);
								$form.attr("data-confirmed", 1);
								$form.submit();
							}
							if ($form.is("a")) {
								window.location.href = $form.attr("href")
							}
						}
					}
				}

				function getCancelButton () {
					return {
						label: "Cancel",
						action: function(m) {
							m.close();
						}
					}
				}
			}
		</script>
	</body>
</html>
